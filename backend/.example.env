# ==============================================
# E-COMMERCE BACKEND CONFIGURATION
# ==============================================

# Application Settings
APP_NAME=E-Commerce Backend
APP_VERSION=1.0.0
DEBUG=True

# Database Configuration
# For SQLite (development)
DATABASE_URL=mysql+pymysql://dat515user:admin123@localhost:3306/DAT515

# For MySQL (production) - uncomment and configure when ready
# DATABASE_URL=mysql+pymysql://${MYSQL_USER}:${MYSQL_PASSWORD}@${MYSQL_HOST}/${MYSQL_DB}
MYSQL_USER=root
MYSQL_PASSWORD=admin123
MYSQL_HOST=localhost
MYSQL_DB=DAT515


# JWT Authentication
# IMPORTANT: Change SECRET_KEY in production!
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (Frontend URLs)
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
CORS_ALLOW_CREDENTIALS=True

# Admin User Configuration
ADMIN_EMAIL=admin@shopify.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=System Administrator

# Stripe Payment Configuration (Optional)
# Uncomment and add your Stripe keys if using payments
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
# STRIPE_WEBHOOK_SECRET=whsec_...
FRONTEND_URL=http://localhost:3000

# AWS Configuration (for file uploads, etc.)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_BUCKET_NAME=

# Security Settings
PASSWORD_MIN_LENGTH=8
RATE_LIMIT_PER_MINUTE=60

# Argon2 Password Hashing Configuration
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=1

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload Settings
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

